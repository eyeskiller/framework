{% extends '@ShopsysFramework/Admin/Layout/layoutWithPanel.html.twig' %}

{% block title %}
    - {{ 'Slider page'|trans }}
{% endblock %}

{% block h1 %}
    {{ 'Slider page'|trans }}
{% endblock %}

{% block main_content %}

    {{ form_start(form) }}
        {{ form_errors(form) }}

        {% embed '@ShopsysFramework/Admin/Inline/FixedBar/fixedBar.html.twig' %}
            {% block fixed_bar_content %}
                <a href="{{ url('admin_slider_list') }}" class="btn-link-style">{{ 'Back to overview'|trans }}</a>
                {{ form_save(sliderItem|default(null), form) }}
            {% endblock %}
        {% endembed %}
    {{ form_end(form) }}

{% endblock %}